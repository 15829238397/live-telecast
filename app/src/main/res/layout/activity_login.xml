<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <android.support.design.widget.TextInputLayout
            android:paddingTop="80dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/til_username"
            android:textColorHint="@color/white"
            android:hint="@string/loginActivity_username_name"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_text"
                android:maxLines="1"
                android:textColorHint="@color/btn_text"
                android:id="@+id/et_username"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/btn_login_bg"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/til_username"
            android:textColor="@color/white"
            android:visibility="gone"
            android:id="@+id/but_request_Identifycode"
            android:text="@string/loginActivity_request_identifycode"/>

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:id="@+id/til_password"
            android:layout_below="@+id/til_username"
            android:textColorHint="@color/white"
            android:hint="@string/loginActivity_pwd_des"
            android:layout_width="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_text"
                android:textColorHint="@color/btn_text"
                android:maxLines="1"
                android:inputType="textPassword"
                android:id="@+id/et_password"/>

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        </RelativeLayout>

        <Button
            android:id="@+id/but_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/til_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/til_password"
            android:layout_below="@+id/til_password"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login_bg"
            android:clickable="true"
            android:padding="0dp"
            android:text="@string/activity_login_login"
            android:textColor="@color/white"
            android:textSize="14sp"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_loginbyanyway"
            android:layout_below="@id/but_login"
            android:textColor="@color/btn_text"
            android:text="@string/phonelogin_ways"
            android:background="@color/transparent"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:id="@+id/but_register"
            android:text="@string/register"
            android:textColor="@color/btn_text"
            android:layout_below="@id/but_login"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</RelativeLayout>