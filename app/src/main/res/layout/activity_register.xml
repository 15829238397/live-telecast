<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dark"
                tools:context=".activity.RegisterActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/but_back"
        android:drawableLeft="@drawable/btn_back_gray"
        android:background="@color/transparent"
        android:paddingLeft="10dp"
        android:text="返回"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.design.widget.TextInputLayout
                android:paddingTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_username"
                android:textColorHint="@color/white"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:id="@+id/et_username"
                    android:hint="@string/registerActivity_input_username" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_login_bg"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/til_username"
                android:textColor="@color/white"
                android:visibility="gone"
                android:id="@+id/but_request_Identifycode"
                android:text="@string/loginActivity_request_identifycode"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_password"
                android:textColorHint="@color/white"
                android:layout_below="@+id/til_username"
                android:hint="@string/registerActivity_input_password"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@id/et_password"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_ms_password"
                android:textColorHint="@color/white"
                android:layout_below="@+id/til_password"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:id="@+id/et_ms_password"
                    android:hint="@string/registerActivity_makesure_password" />

            </android.support.design.widget.TextInputLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login_bg"
                android:textColor="@color/white"
                android:text="@string/register"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:id="@+id/but_register"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:id="@+id/but_registerbyAnyWay"
                android:text="@string/registerbyphone"
                android:textColor="@color/btn_text"
                android:layout_below="@id/but_register"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
